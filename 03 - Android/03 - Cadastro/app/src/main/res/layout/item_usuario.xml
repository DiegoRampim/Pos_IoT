<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewUsuario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textViewUsuarioNome"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewUsuario"
        android:text="Nome"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewUsuarioSobrenome"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewUsuarioNome"
        android:layout_toEndOf="@+id/imageViewUsuario"
        android:text="Sobrenome"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textViewUsuarioNascimento"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewUsuarioSobrenome"
        android:layout_toEndOf="@+id/imageViewUsuario"
        android:text="Data Nascimento"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textViewUsuarioGenero"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewUsuarioNascimento"
        android:layout_toEndOf="@+id/imageViewUsuario"
        android:text="Genero"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>